<?xml version="1.0" encoding="UTF-8" ?>

<MenuConfig>
    <Displayers>
        <Displayer name="TabbedMenu" type="net.sf.navigator.displayer.TabbedMenuDisplayer"/>
        <Displayer name="Velocity" type="net.sf.navigator.displayer.VelocityMenuDisplayer"/>
    </Displayers>

    <Menus>
        <!-- New Menu for Tabbed Displayer -->
        <!-- No location, uses first item's location (People) -->
        <Menu name="TabbedKeywords" title="keywordsTab" page="/keywords.htm" toolTip="helpKeywordsTab">
            <Item name="KeywordList" title="keywords" page="/keywords.htm" toolTip="helpKeywordsSubMenu"/>
            <Item name="NewKeywordByLanguage" title="newKeywordByLanguage" page="/keyword.htm?creationType=language" toolTip="helpNewKeywordByLanguageSubMenu" roles="ROLE_ADMIN,ROLE_USER"/>
            <Item name="NewKeywordByCountry" title="newKeywordByCountry" page="/keyword.htm?creationType=country" toolTip="helpNewKeywordByCountrySubMenu" roles="ROLE_ADMIN,ROLE_USER"/>
        </Menu>
        <Menu name="TabbedCountries" title="countriesTab" toolTip="helpCountriesTab" roles="ROLE_ADMIN">
            <Item name="CountryList" title="countries" page="/countries.htm" toolTip="helpCountriesSubMenu"/>
            <Item name="NewCountry" title="newCountry" page="/country.htm" toolTip="helpNewCountrySubMenu"/>
        </Menu>
        <Menu name="TabbedLanguages" title="languagesTab" page="/languages.htm" toolTip="helpLanguagesTab" roles="ROLE_ADMIN">
            <Item name="LanguageList" title="languages" page="/languages.htm" toolTip="helpLanguagesSubMenu"/>
            <Item name="NewLanguage" title="newLanguage" page="/language.htm" toolTip="helpNewLanguageSubMenu"/>
        </Menu>
        <Menu name="TabbedBundles" title="bundlesTab" toolTip="helpBundlesTab" roles="ROLE_ADMIN">
            <Item name="BundleList" title="bundles" page="/bundles.htm" toolTip="helpBundlesSubMenu"/>
            <Item name="NewBundle" title="newBundle" page="/bundle.htm" toolTip="helpNewBundleSubMenu"/>
        </Menu>
        <Menu name="TabbedExport" title="exportTab" toolTip="helpExportTab" roles="ROLE_ADMIN,ROLE_USER">
            <Item name="ExportList" title="exportListing" page="/export/" toolTip="helpExportListingSubMenu"/>
            <Item name="Export" title="export" page="/export.htm" toolTip="helpExportSubMenu"/>
            <Item name="Import" title="import" page="/import.htm" toolTip="helpImportSubMenu"/>
        </Menu>
        <Menu name="TabbedUsers" title="usersTab" toolTip="helpUsersTab" roles="ROLE_ADMIN">
            <Item name="UsersList" title="users" page="/users.htm" toolTip="helpUsersSubMenu"/>
            <Item name="NewUser" title="newUser" page="/user.htm" toolTip="helpNewUserSubMenu"/>
        </Menu>
        <Menu name="TabbedAuditLog" title="auditTab" toolTip="helpAuditTab" roles="ROLE_ADMIN">
            <Item name="AuditLog" title="auditLog" page="/auditLog.htm" toolTip="helpAuditLogSubMenu"/>
        </Menu>
    </Menus>
</MenuConfig>
